@page
@model NeilMacabulos.Midterm_.Pages.Manage.Products.Index
@{
}

<h3>Products</h3>

<div class="search">
    <i class="bi bi-search"></i>
    <input type="text" class="form-control" placeholder="Search" id="search" value="@Model?.View?.Products?.Keyword">
</div>

<div class="row">
    <div class="col-3">
        <div class="form-group">
            <label for="">Sort By</label>
            <select class="form-control" id="sortBy" asp-for="View.Categories.SortBy">
                <option value="">choose</option>
                <option value="name">Name</option>
                <option value="description">Description</option>
                <option value="abbreviation">Abbreviation</option>
            </select>
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            <label for="">Sort Order</label>
            <select class="form-control" id="sortOrder" asp-for="View.Categories.SortOrder">
                <option value="1">Consumable</option>
                <option value="2">NonConsumable</option>
            </select>
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            <label for="">Products</label>
            <select class="form-control select2" id="productsId">
                @{
                    if (Model.View.ProductsId != null)
                    {
                                <option selected value="@Model.View.ProductsId">@Model.View.ProductsName</option>
                    }
                }
            </select>
        </div>
    </div>
</div>